<!-- _form.html.erb -->
<%= form_for @problem, html: { multipart: true } do |f| %>

	<!-- form input error message -->
	<% if @problem.errors.any? %>
	  <div id="error_explanation">
	    <h4>
	      <%= pluralize(@problem.errors.count, "error") %> 
	      prohibited
	      this problem from being saved:
	    </h4>
	    <ul>
	      <% @problem.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<!-- form labels & text -->
	<p>
	  <%= f.label :problem_name %><br>
	  <%= f.text_field :problem_name %>
	</p>

	<p>
		<%= f.label :problem_grade %><br>
		<%= f.select(:problem_grade, options_for_select(v_scale, :selected => f.object.problem_grade)) %>
	</p>

	<p>
		<%= f.label :main_area %><br>
		<%= f.select(:main_area, options_for_select(main_areas, :selected => f.object.main_area), {})
		%>
	</p>

	<p>
	  <%= f.label :description %><br>
	  <%= f.text_area :description %>
	</p>

	<p>
		
	</p>
	  <%= f.label :image %><br>
	  <%= f.file_field :image %>
	<p>
	  <%= f.submit "Update" %>
	</p>

<% end %>

