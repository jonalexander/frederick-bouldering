<!DOCTYPE html>
<%= stylesheet_link_tag "style.css" %>

<html>
  <head>
    <meta charset="utf-8">
    <title>Frederick Bouldering</title>
    <%= stylesheet_link_tag "style.css" %>
  </head>

  <body>
    <div class="wrapper">

      <header>
        <h2><a href="#">Frederick Bouldering</a></h2>
      </header>

      <section class="sub_header">

        <h3>All Problems</h3>

      </section>

      <section class="nav">
  
        <%= link_to 'Add New Problem', new_problem_path %> 

      </section>

      <!-- bouldering problems / all -->
      <section id="all_problems">
  
        <table id="table_index">
          <tr>
            <th><strong>Problem</strong></th>
            <th><strong>Grade</strong></th>
            <th><strong>Main Area</strong></th>
            <th colspan="2"><strong>Description</strong></th>
          </tr>
       
          <% @problems.each do |problem| %>
          <tr>
            <td><%= problem.problem_name %></td>
            <td><%= problem.problem_grade %></td>
            <td><%= problem.main_area %></td>
            <td><%= problem.description %></td>
            <!-- <td><%= link_to 'Show', problem_path(problem) %></td> -->
            <td><%= link_to 'Edit', edit_problem_path(problem) %></td>
            <!-- <td><%= link_to 'Delete', problem_path(problem),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
          <% end %>
        </table>

      </section>  <!-- close all_problems -->

      <footer>

        <%= link_to 'Add New Problem', new_problem_path %> 
      
      </footer>
    </div> <!-- close wrapper -->
  </body>
</html>
