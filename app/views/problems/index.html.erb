<div class="navbar">

  <div class="sub_header"> All Problems </div>
  <div class="nav right top">
    <%= link_to 'Add Problem', new_problem_path %>
  </div>
  
</div>

<div id="all_problems">

  <table id="table_index">
 <!-- copy & paste -->
    <% @problems.each do |problem| %>
      <tr class="<%= cycle('oddrow', 'evenrow') -%>">
        <td>
          <div id="title">
          <%= link_to problem.problem_name, problem_path(problem)  %> <%= link_to problem.problem_grade, problem_path(problem) %> - @<%= problem.main_area %>
          </div>
          <div id="description"><%= problem.description %></div>
          <div id="edit"><%= link_to 'Edit', edit_problem_path(problem) %></div>
        </td>
      </tr>
    <% end %>
  <!-- copy & paste -->
  </table>
</div>  <!-- close div all_problems -->


