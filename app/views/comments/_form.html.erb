<!-- _form.html.erb -->
<%= form_for([@problem, @problem.comments.build]) do |f| %>
  <p>
    <%= f.label "Name" %>: <br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label "Message" %>: <br>
    <%= f.text_area :body, cols: "40", rows: "10" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %> 